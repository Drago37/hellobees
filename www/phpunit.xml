<?xml version="1.0" encoding="UTF-8"?>
<phpunit
    bootstrap="tests/unit-bootstrap.php"
    colors="true"
    verbose="true"
    failOnRisky="true"
    convertNoticesToExceptions="true"
    stopOnFailure="false"
    cacheResult="false">
    <coverage processUncoveredFiles="true">
        <include>
            <directory suffix=".php">src</directory>
        </include>
    </coverage>
</phpunit>